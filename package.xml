<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE package SYSTEM "../../php4/pear/package.dtd">
<package version="1.0">
  <name>DB</name>
  <summary>Unified Database API</summary>
  <description>
    DB is PEAR's database abstraction layer (or "unified database API"
    if you prefer).
  </description>
  <maintainers>
    <maintainer>
      <user>ssb</user>
      <role>lead</role>
      <name>Stig Sæther Bakken</name>
      <email>stig@php.net</email>
    </maintainer>
    <maintainer>
      <user>cox</user>
      <role>developer</role>
      <name>Tomas V.V.Cox</name>
      <email>cox@php.net</email>
    </maintainer>
  </maintainers>
  <release>
    <version>1.0</version>
    <state>stable</state>
    <date>2002-01-29</date>
    <notes>First independent release of DB</notes>
    <filelist>
      <dir name="/">
          <file>DB.php</file>
          <dir name="DB" role="php">
            <file>common.php</file>
            <file>storage.php</file>
            <file>fbsql.php</file>
            <file>ibase.php</file>
            <file>ifx.php</file>
            <file>msql.php</file>
            <file>mssql.php</file>
            <file>mysql.php</file>
            <file>oci8.php</file>
            <file>odbc.php</file>
            <file>pgsql.php</file>
            <file>sybase.php</file>
            </dir>
            <dir name="tests" role="test">
                <file>db_error.phpt</file>
                <file>db_ismanip.phpt</file>
            </dir>
        </dir>
    </filelist>
    <deps>
      <dep type="php" rel="ge" version="4.0.4pl1" />
    </deps>
  </release>
</package>
